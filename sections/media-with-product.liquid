{% schema %}
{
  "name": "Media with Product",
  "settings": [
    {
      "type": "radio",
      "id": "desktop_media_type",
      "label": "Desktop Media Type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "video",
      "id": "desktop_video",
      "label": "Desktop Video"
    },
    {
      "type": "product",
      "id": "selected_product",
      "label": "Select Product"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Media with Product"
    }
  ]
}
{% endschema %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .product-card-overlay {
    bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding .product-card-overlay {
      bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

{% assign selected_product = all_products[section.settings.selected_product] %}
<div class="section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="media-with-product-section">
      <div>
        {% if section.settings.desktop_media_type == 'video' and section.settings.desktop_video != blank %}
          {% render 'video-player',
            class_video: 'video-js media-background',
            class_play_button: 'banner__media-video-play button-reset',
            class_pause_button: 'banner__media-video-pause button-reset',
            video: section.settings.desktop_video,
            image_size: '1200x',
            autoplay: true,
            loop: true,
            muted: true
          %}
        {% elsif section.settings.desktop_media_type == 'image' and section.settings.desktop_image != blank %}
          <img
            src="{{ section.settings.desktop_image | image_url: width: 2000 }}"
            alt="Section Image"
            class="media-background"
          >
        {% endif %}
      </div>

      {% if selected_product %}
        <a href="{{ selected_product.url }}" class="product-card-overlay">
          <div class="product-image">
            <img src="{{ selected_product.featured_image | image_url: width: 300 }}" alt="{{ selected_product.title }}">
          </div>
          <div class="product-details">
            <h3>{{ selected_product.title }}</h3>
            <p>{{ selected_product.price | money }}</p>
            <div class="product-extra">
              <div class="product-description">
                {{ selected_product.description | strip_html | truncatewords: 20 }}
              </div>

              {% if selected_product.variants.size > 1 %}
                <div class="product-variants">
                  <label>Variants</label>
                  <ul>
                    {% for variant in selected_product.variants %}
                      <li>{{ variant.title }}</li>
                    {% endfor %}
                  </ul>
                </div>
              {% endif %}
            </div>
          </div>

          <div class="product-icon">
            <span class="svg-wrapper">
              {{ 'right-scroll.svg' | inline_asset_content }}
            </span>
          </div>
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .media-with-product-section {
    position: relative;
    width: 100%;
    height: 55rem;
    border-radius: 8px;
    overflow: hidden;
  }

  .media-with-product-section video-player {
    display: block;
    max-width: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    height: 100%;
    width: 100%;
  }

  .media-background {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .product-card-overlay {
    position: absolute;
    left: 36px;
    max-width: 450px;
    margin: 0 auto;
    background-color: #ffffffb5;
    -webkit-backdrop-filter: blur(3px);
    backdrop-filter: saturate(150%) blur(46px);
    transition: background-color 0.3s ease;
    display: flex;
    gap: 20px;
    align-items: center;
    padding: 12px 13px;
    border-radius: 8px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    text-decoration: none;
    transition: box-shadow 0.3s ease;
    z-index: 1;
  }

  .product-card-overlay:hover {
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
    background-color: rgba(255, 255, 255, 0.78);
  }

  .product-image {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 4px;
  }

  .product-details {
    flex-grow: 1;
  }

  .product-details h3 {
    color: var(--text-primary);
    margin: 0;
    margin-bottom: 4px;
  }

  .product-details p {
    font-size: 14px;
    color: #666;
    margin: 0;
  }

  .product-extra {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: max-height 0.4s ease, opacity 0.3s ease;
    margin-top: 10px;
  }

  .product-extra .product-description {
    font-size: 12px;
    line-height: 1.3;
    color: var(--text-secondary);
  }

  .product-variants label {
    font-weight: 500;
    font-size: 13px;
    color: var(--text-secondary);
    text-decoration: underline;
  }

  .product-variants ul {
    list-style: none;
    padding: 0;
    margin: 4px 0 0;
    display: flex;
    row-gap: 12px;
    column-gap: 10px;
    flex-wrap: wrap;
  }

  .product-variants li {
    font-size: 10px;
    color: #555;
    background: white;
    border-radius: 16px;
    padding: 3px 6px;
    display: flex;
    align-items: center;
    color: var(--text-secondary);
  }

  @media screen and (min-width: 750px) {
    .product-card-overlay:hover .product-extra {
      max-height: 300px;
      opacity: 1;
    }

    .product-card-overlay {
      transition: all 0.4s ease;
    }
  }

  .product-icon {
    display: flex;
    background: white;
    border-radius: 50%;
    padding: 10px;
  }

  .svg-wrapper svg {
    width: 24px;
    height: 24px;
  }

  .product-icon .svg-wrapper svg path {
    fill: var(--text-secondary);
  }

  @media screen and (max-width: 749px) {
    .product-card-overlay {
      flex-direction: column;
      justify-content: flex-start;
      align-items: self-start;
      left: 26px;
      gap: 16px;
    }

    .product-icon {
      padding: 6px;
    }

    .svg-wrapper {
      width: 16px;
      height: 16px;
    }

    .product-extra {
      display: none;
    }
  }
</style>
